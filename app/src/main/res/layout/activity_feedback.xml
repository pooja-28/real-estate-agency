<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/linearl"
        android:layout_width="500dp"
        android:layout_height="56dp"
        android:background="#B3E5FC"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="40dp"
        android:layout_below="@id/linearl"
        android:layout_marginBottom="40dp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/fb1"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="#000"
        android:hint="Enter Your Name"
        android:textColorHint="#000"
        android:layout_below="@+id/fb"/>
    <EditText
        android:id="@+id/fb2"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="#000"
        android:hint="Enter Your Email-ID"
        android:textColorHint="#000"
        android:layout_below="@+id/fb1"/>
    <EditText
        android:id="@+id/fb3"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="#000"
        android:hint="Give Your Feedback"
        android:textColorHint="#000"
        android:layout_below="@+id/fb2"/>
    <Button
        android:id="@+id/fbbtn1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:layout_below="@+id/fb3"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="30dp"
        android:onClick="sendFeedback"
      android:background="@drawable/btn"
        android:textColor="#1976ad"
        android:textAllCaps="false"
        android:fontFamily="serif"/>




</RelativeLayout>