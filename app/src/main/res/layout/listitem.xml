<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/card_view1"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6f8fb"
    android:id="@+id/rere1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Building: "
        android:textSize="20dp"
        android:id="@+id/t1"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/txtt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/t1"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@id/t1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="26dp"
        android:text="Dosti acers"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtt1"
        android:layout_marginTop="10dp"
        android:text="Area: "
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t1"
        android:layout_toRightOf="@id/t2"
        android:layout_alignBaseline="@id/t2"
        android:text="wadala east"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of sqft: "
        android:id="@+id/t3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/t2"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/txtt2"
       android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
      android:layout_alignBaseline="@id/t3"
        android:layout_toRightOf="@id/t3"
        android:text="560 sqft"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/t4"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@id/t3"/>

    <TextView
        android:id="@+id/txtt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/txtt3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/t4"
        android:text="2.5 crore"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:textSize="20dp" />




</RelativeLayout>
</android.support.v7.widget.CardView>